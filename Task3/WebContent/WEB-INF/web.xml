<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
	    <servlet-name>LoginServlet</servlet-name>
	    <servlet-class>servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>SignupServlet</servlet-name>
	    <servlet-class>servlet.SignupServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>SendNoticeServlet</servlet-name>
	    <servlet-class>servlet.SendNoticeServlet</servlet-class>
	</servlet>
	<servlet>
    <servlet-name>SendPrivateServlet</servlet-name>
    <servlet-class>servlet.SendPrivateServlet</servlet-class>
    </servlet>
	<servlet>
	    <servlet-name>ChangeProfileServlet</servlet-name>
	    <servlet-class>servlet.ChangeProfileServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>NewTaskServlet</servlet-name>
	    <servlet-class>servlet.NewTaskServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>ModifyTaskServlet</servlet-name>
	    <servlet-class>servlet.ModifyTaskServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>DeleteTaskServlet</servlet-name>
	    <servlet-class>servlet.DeleteTaskServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>StartTaskServlet</servlet-name>
	    <servlet-class>servlet.StartTaskServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>AuthorizeServlet</servlet-name>
	    <servlet-class>servlet.AuthorizeServlet</servlet-class>
	</servlet>
	<servlet>
    <servlet-name>SetLevelServlet</servlet-name>
    <servlet-class>servlet.SetLevelServlet</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>StopTaskServlet</servlet-name>
    <servlet-class>servlet.StopTaskServlet</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>MessageManageServlet</servlet-name>
    <servlet-class>servlet.MessageManageServlet</servlet-class>
    </servlet>
	
	<servlet-mapping>
	    <servlet-name>SignupServlet</servlet-name>
	    <url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>LoginServlet</servlet-name>
	    <url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>SendNoticeServlet</servlet-name>
	    <url-pattern>/sendnotice</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
    <servlet-name>SendPrivateServlet</servlet-name>
    <url-pattern>/sendprivate</url-pattern>
  	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>ChangeProfileServlet</servlet-name>
	    <url-pattern>/changeprofile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>NewTaskServlet</servlet-name>
	    <url-pattern>/newtask</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>ModifyTaskServlet</servlet-name>
	    <url-pattern>/modifytask</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>DeleteTaskServlet</servlet-name>
	    <url-pattern>/deletetask</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>StartTaskServlet</servlet-name>
	    <url-pattern>/starttask</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>AuthorizeServlet</servlet-name>
	    <url-pattern>/authorize</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
    	<servlet-name>SetLevelServlet</servlet-name>
    	<url-pattern>/setlevel</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
    	<servlet-name>StopTaskServlet</servlet-name>
    	<url-pattern>/stoptask</url-pattern>
  	</servlet-mapping>
  	<servlet-mapping>
    	<servlet-name>MessageManageServlet</servlet-name>
    	<url-pattern>/messagemanage</url-pattern>
  	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
